<map id="map" scale="{{defaultScale}}" longitude='{{longitude}}' latitude='{{latitude}}' style='height:{{windowHeight}}px' markers="{{stores}}" show-location="{{showPosition}}"  subkey="{{mapSubKey}}" show-compass="{{true}}" enable-3D="{{true}}" enable-rotate="{{true}}" bindmarkertap="onMarkerTap">
	<!-- 上方的添加提醒 -->
	<block wx:if="{{!hideMe}}">
		<cover-view class="add_me" bindtap="hideMe">添加到【我的小程序】更快找到我</cover-view>
		<cover-view class="up" bindtap="hideMe"></cover-view>
	</block>
	<!-- 管理入口 -->
	<cover-view class="cover" wx:if="{{showAdmin}}">

	</cover-view>
 
	<!-- 查看全部 -->
	<cover-view class="button show_all" bindtap="onChangeShowPosition" bindlongpress='showAdmin'>查看全部</cover-view>
   
    

</map>